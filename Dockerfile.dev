# Dockerfile.dev
FROM node:18-alpine

WORKDIR /usr/src/app

# Instalar dependencias necesarias para desarrollo
RUN apk add --no-cache bash openssl

# Copiar archivos de dependencias
COPY package*.json ./

# Instalar TODAS las dependencias (incluye las de desarrollo)
RUN npm install

CMD ["ls"]

# Copiar el esquema Prisma y el resto del cÃ³digo
COPY prisma ./prisma
COPY tsconfig.json ./
#COPY nest-cli.json ./        # ðŸ‘ˆ si usas Nest CLI, tambiÃ©n este
#COPY .env ./                 # ðŸ‘ˆ opcional, si lo usas en desarrollo
COPY src ./src
COPY . .

# Generar cliente Prisma (ahora sÃ­ encuentra el schema)
RUN npx prisma generate

# Exponer puerto del servidor NestJS
EXPOSE 3000

# Comando por defecto (modo watch)
CMD ["npm", "run", "start:dev"]
